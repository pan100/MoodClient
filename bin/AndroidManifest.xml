<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.perandersen.moodclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smile"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="no.perandersen.moodclient.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="no.perandersen.moodclient.SleepLogActivity"
            android:label="@string/title_activity_sleep_log"
            android:parentActivityName="no.perandersen.moodclient.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.DebugMainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.MedicineLogActivity"
            android:label="@string/title_activity_medicine_log"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.DebugMainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.TextAndImageLogActivity"
            android:label="@string/title_activity_text_and_image_log" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.DebugMainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.DebugMainActivity"
            android:label="@string/title_activity_debug_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="no.perandersen.moodclient.EditTodayActivity"
            android:label="@string/title_activity_edit_today" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.DebugMainActivity" />
        </activity>
    </application>

</manifest>