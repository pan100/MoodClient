<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.perandersen.moodclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="no.perandersen.moodclient.application.MoodApplication"
        android:allowBackup="false"
        android:icon="@drawable/smile"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="no.perandersen.moodclient.application.NetworkChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name="no.perandersen.moodclient.application.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="no.perandersen.moodclient.activities.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.SleepLogActivity"
            android:label="@string/title_activity_sleep_log"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.activities.MainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.DebugMainActivity"
            android:label="@string/title_activity_debug_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.EditTodayActivity"
            android:label="@string/title_activity_edit_today"
            android:launchMode="singleInstance" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.activities.MainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.activities.MainActivity" />
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.MoodActivity"
            android:label="@string/title_activity_evening"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="no.perandersen.moodclient.activities.TriggersDiaryActivity"
            android:label="@string/title_activity_triggers_diary"
            android:launchMode="singleInstance"
            android:parentActivityName="no.perandersen.moodclient.activities.MoodActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.perandersen.moodclient.activities.MoodActivity" />
        </activity>
    </application>

</manifest>